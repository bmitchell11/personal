@page
@model FinalProject.Pages.HistoryModel
@{
    ViewData["Title"] = "Package History";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Resident Package History</h2>

    <div class="d-flex justify-content-center mb-4">
        <a asp-page="/Receive" class="btn btn-primary mx-2">Receive Package</a>
        <a asp-page="/Dashboard" class="btn btn-primary mx-2">Pending Packages</a>
        <a asp-page="/History" class="btn btn-primary mx-2 disabled">Package History</a>
        <a asp-page="/UnknownPackage" class="btn btn-primary mx-2">Unknown Packages</a>
        <a asp-page="/Logout" class="btn btn-danger mx-2">Logout</a>
    </div>

    <form method="post" class="mb-4 mx-auto" style="max-width: 500px;">
        <div class="row g-3">
            <div class="col-md-6">
                <select asp-for="ResidentID" asp-items="@(new SelectList(Model.Residents, "ResidentID", "FullName"))" class="form-control"></select>
            </div>
            <div class="col-md-6">
                <input asp-for="UnitNumber" class="form-control" placeholder="Unit Number" type="number" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 w-100">Search History</button>
    </form>

    @if (Model.Packages.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Package ID</th>
                    <th>Postal Service</th>
                    <th>Received Date</th>
                    <th>Pickup Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pkg in Model.Packages)
                {
                    <tr>
                        <td>@pkg.PackageID</td>
                        <td>@pkg.PostalService</td>
                        <td>@pkg.ReceivedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(pkg.PickupDate.HasValue ? pkg.PickupDate.Value.ToString("yyyy-MM-dd HH:mm") : "Pending")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.Packages.Count == 0 && Model.ResidentID != 0)
    {
        <p class="text-center text-muted">No packages found for this resident.</p>
    }

</div>
