@page
@model FinalProject.Pages.UnknownPackageModel
@{
    ViewData["Title"] = "Unknown Packages";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Log Unknown Package</h2>

    <div class="d-flex justify-content-center mb-4">
        <a asp-page="/Receive" class="btn btn-primary mx-2">Receive Package</a>
        <a asp-page="/Dashboard" class="btn btn-primary mx-2">Pending Packages</a>
        <a asp-page="/History" class="btn btn-primary mx-2">Package History</a>
        <a asp-page="/UnknownPackage" class="btn btn-primary mx-2 disabled">Unknown Packages</a>
        <a asp-page="/Logout" class="btn btn-danger mx-2">Logout</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    <form method="post" class="mx-auto" style="max-width: 500px;">
        <div class="mb-3">
            <label>Name on Package:</label>
            <input asp-for="NameOnPackage" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Postal Service:</label>
            <select asp-for="PostalService" class="form-select" asp-items="Model.PostalServiceOptions">
                <option value="">-- Select Postal Service --</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>

    @if (Model.UnknownPackages.Any())
    {
        <h4 class="mt-4">Current Unknown Packages</h4>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name on Package</th>
                    <th>Postal Service</th>
                    <th>Delivered Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pkg in Model.UnknownPackages)
                {
                    <tr>
                        <td>@pkg.NameOnPackage</td>
                        <td>@pkg.PostalService</td>
                        <td>@pkg.DeliveredDate.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No unknown packages logged yet.</p>
    }

</div>
