@page
@model FinalProject.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">BuffTeks Apartment Management</h2>
    <h4 class="mb-4 text-center">Pending Packages</h4>

    <div class="d-flex justify-content-center mb-4">
        <a asp-page="/Receive" class="btn btn-primary mx-2">Receive Package</a>
        <a asp-page="/Pending" class="btn btn-primary mx-2 disabled">Pending Packages</a>
        <a asp-page="/History" class="btn btn-primary mx-2">Package History</a>
        <a asp-page="/UnknownPackage" class="btn btn-primary mx-2">Unknown Packages</a>
        <a asp-page="/Logout" class="btn btn-danger mx-2">Logout</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    @if (Model.PendingPackages.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Resident Name</th>
                    <th>Unit Number</th>
                    <th>Postal Service</th>
                    <th>Received Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pkg in Model.PendingPackages)
                {
                    <tr>
                        <td>@pkg.Resident.FullName</td>
                        <td>@pkg.Resident.UnitNumber</td>
                        <td>@pkg.PostalService</td>
                        <td>@pkg.ReceivedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center">
                            <form method="post" class="d-inline">
                                <input type="hidden" name="ResidentID" value="@pkg.ResidentID" />
                                <input type="hidden" name="PostalService" value="@pkg.PostalService" />
                                <button type="submit" class="btn btn-success btn-sm">Mark as Picked Up</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No pending packages at the moment.</p>
    }

</div>
